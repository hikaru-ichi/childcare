<div class="text-center">
  <h2>ログイン</h2>
</div>

<div style="text-align: center">
  <img src="/assets/panda_family.png" alt="パンダの親子">
</div>
<div class="row justify-content-center">
  <div class="col-sm-6">
    
    

    <%= form_with(url: login_path, scope: :session) do |f| %>

      <div class="mb-2">
        <%= f.email_field :email, placeholder: 'メールアドレス', class: 'form-control' %>
      </div>

      <div class="mb-2">
        <%= f.password_field :password, placeholder: 'パスワード', class: 'form-control' %>
      </div>
      <div class="mb-2">
        <%= f.submit 'ログイン', class: 'btn btn-secondary w-100' %>
      </div>
    <% end %>

    <p>アカウントをお持ちでない方は <%= link_to 'こちら', signup_path %></p>
  </div>
</div>
