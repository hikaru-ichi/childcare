<header class="mb-4">
  <nav class="navbar navbar-expand-sm navbar-dark" style="background-color: #0fc47a;">
    <div class="container-fluid ps-5 pe-5">
      <a class="navbar-brand" href="/">子育て助け合い広場</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
        <span class="navbar-toggler-icon"></span>
      </button>

      <% if logged_in? %>
        <div class="btn-group">
          <ul class="navbar-nav">
            <li class="ms-3"><%= link_to 'ユーザー情報', user_path(current_user), class: 'nav-link' %></li>
            <li class="ms-3"><%= link_to 'メッセージ', messages_path(current_user), class: 'nav-link' %></li>
            <li class="ms-3"><%= link_to 'ログアウト', logout_path, method: :delete, class: 'nav-link' %></li>
          </ul>
        </div>
      <% else %>
          <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
            <ul class="navbar-nav">
              <li class="nav-item"><%= link_to 'ユーザー登録', signup_path, class: 'nav-link' %></li>
              <li class="nav-item"><%= link_to 'ログイン', login_path, class: 'nav-link' %></li>
            </ul>
          </div>
      <% end %>
    </div>
  </nav>
</header>