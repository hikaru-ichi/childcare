<h2 class pb-2>メッセージ</h2>

<div class="my-3 p-3 bg-white rounded shadow-sm">
<h6 class="border-bottom pb-2 mb-0">最近のメッセージ</h6>

<% @messages.each do |message| %>
  <div class="d-flex text-muted pt-3">
    <img class="bd-placeholder-img flex-shrink-0 me-2 rounded-circle" src="<%=gravatar_url(message.sender, { size: 64 }) %>" alt="">
    <p class="pb-3 mb-0 small lh-sm border-bottom">
      <strong class="d-block text-gray-dark"><%= link_to message.sender.name, message_new_path(chat_user_id: message.sender.id) %></strong>
      <% message_time = message.created_at + ( 9 * 60 * 60 ) %>
      <%= "#{ message_time.month }月#{message_time.day}日#{message_time.hour}:#{message_time.sec}" %>
      <%= message.content%>
    </p>
  </div>
<% end %>

</div>
<%== pagy_bootstrap_nav(@pagy) %>
